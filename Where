SELECT * FROM pasti WHERE calorie > 500;
SELECT * FROM pasti WHERE prezzo >= 15 AND prezzo <= 16;
SELECT * FROM ingredienti WHERE senza_lattosio = 1 AND senza_glutine = 1;
